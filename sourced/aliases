#!/bin/bash

# Gitting
alias ga='git add'
alias gaa='git add -a'
alias gc='git commit'
alias gca='git commit -a'
alias gd='git diff'
alias gda='git diff -a'
alias gpom='git push origin master'
alias gs='git status'

# Prettiness
alias ls='ls --group-directories-first --time-style=+"%Y-%m-%d_%H%M:%S" --color=auto'
alias df='df -h'
alias free='free -m'
alias grep='grep --color=tty'
alias fgrep='fgrep --color=tty'
alias egrep='egrep --color=tty'

# Always use $EDITOR for editing
alias emac="$EDITOR"
alias nano="$EDITOR"
alias vi="$EDITOR"
alias vim="$EDITOR"
alias ed="$EDITOR"

# Safety
alias cp='cp -i' # Prompt before overwriting

# Performance
alias make='make -j6' # Parallelize make with 6 cores.

# Return values have been used in literally zero cases where
# ShellCheck catches them being potentially masked in my scripts.
alias shellcheck='shellcheck --exclude=SC2155'
